<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SurgutCulture" parent="Theme.MaterialComponents.Light">
        <!--MaterialComponents.DayNight.DarkActionBar-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_surgut_main</item>
        <item name="colorPrimaryVariant">@color/green_surgut_light</item>
        <item name="colorAccent">@color/green_surgut_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SurgutCulture.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SurgutCulture.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SurgutCulture.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>